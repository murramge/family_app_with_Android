<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    tools:context=".mainActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="400dp"
        android:layout_height="750dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="618dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_questlist"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="50dp"
                    app:srcCompat="@drawable/main_list_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_custom_button"
                    android:gravity="center"
                    android:text="행복이"
                    android:textColor="#FBFBFB"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="204dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:text="Lv."
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_ex"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_weight="0" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_bee"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-15dp"
                android:paddingLeft="30dp"
                android:paddingBottom="20dp"
                app:srcCompat="@drawable/bee01" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:orientation="vertical"></LinearLayout>

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/location_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:layout_weight="0"
                    android:background="@drawable/bg_custom_button"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="63dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40dp"
                            android:layout_weight="0"
                            android:text='퀘스트에 새로운 퀘스트인 "'
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/qs_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="TextView"
                            android:textColor="#F43131"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:text='" 추가되었습니다!'
                            android:textColor="#000000" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="417dp"
                android:layout_height="54dp"
                android:layout_gravity="top"
                android:background="#F8F8F8"
                android:gravity="center|top"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_home"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/home_icon" />

                <ImageView
                    android:id="@+id/btn_chat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/chat_icon" />

                <ImageView
                    android:id="@+id/btn_story"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/story_icon" />

                <ImageView
                    android:id="@+id/btn_calendar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/calender_icon" />

                <ImageView
                    android:id="@+id/btn_info"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/info_icon" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>