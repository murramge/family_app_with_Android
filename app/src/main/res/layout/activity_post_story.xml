<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundTint="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_userfamilycode"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="TextView"
                    android:textColor="#FAFAFA" />

                <TextView
                    android:id="@+id/story_email"
                    android:layout_width="33dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textColor="#FBFBFB" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="379dp"
                    android:layout_height="50dp"

                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="게시글 작성"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:onClick="clickLoad"
                    android:textColor="#1C1414"
                    app:backgroundTint="@android:color/holo_orange_light"
                    android:text="게시" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_photoadd"
                    android:layout_width="118dp"
                    android:onClick="clickBtn"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/plus_cam_icon" />

                <ImageView
                    android:id="@+id/iv_iv"
                    android:layout_width="99dp"
                    android:layout_height="match_parent"
                    app:srcCompat="?attr/selectableItemBackground" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/text_post"
                    android:layout_width="match_parent"
                    android:layout_height="266dp"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="글을 작성해 주세요"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <Button
                android:id="@+id/iv_upload_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_custom_button"
                android:onClick="clickUpload"
                android:text="스토리를 작성한 후 이 버튼을 누른 후 게시를 눌러주세요!"
                android:textColor="#1C1414"
                app:backgroundTint="@android:color/holo_orange_light" />

        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>